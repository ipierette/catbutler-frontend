{
  "version": 2,
  "name": "catbutler-frontend",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "BUILD_TIMESTAMP": "@now"
  },
  "build": {
    "env": {
      "VITE_BUILD_TIME": "@now"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "(.*)\\.(js|css|png|jpg|jpeg|webp|woff2|woff|ttf|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}