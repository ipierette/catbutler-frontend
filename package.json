{
  "name": "catbutler-frontend",
  "version": "4.0.2",
  "description": "Frontend React para CatButler - Assistente de IA para Casa",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "dev:clean": "node scripts/dev-clean.js",
    "dev:fresh": "rm -rf node_modules/.vite && rm -rf .vite && npm run dev",
    "clean-cache": "node scripts/clean-cache.js",
    "build": "vite build",
    "lint": "eslint . --ext .js,.jsx --fix",
    "audit:components": "node scripts/audit-components.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "preview": "vite preview --port=5173",
    "start": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "predeploy": "npm run build",
    "pretest": "npm run build",
    "test": "start-server-and-test preview http://localhost:5173 'playwright test --config playwright.config.js'",
    "test:ci": "PORT=5174 start-server-and-test 'vite preview --port=5174' http://localhost:5174 'playwright test --config playwright.config.js'",
    "test:ci-basic": "npx playwright test --config playwright.ci.config.js",
    "test:minimal": "npx playwright test --config playwright.minimal.config.js",
    "test:quality": "npx playwright test --config playwright.ci.config.js",
    "test:quality-ui": "npx playwright test --config playwright.ci.config.js --ui",
    "test:accessibility": "npx playwright test tests/accessibility-wcag.spec.js",
    "test:performance": "npx playwright test tests/performance.spec.js",
    "test:integration": "npx playwright test tests/integration.spec.js",
    "test:cleanup": "pkill -f ':5173' || true && pkill -f ':5174' || true",
    "cleanup-ports": "bash scripts/cleanup-ports.sh",
    "test:mobile": "playwright test --grep=\"Mobile\"",
    "test:desktop": "playwright test --grep=\"Desktop\"",
    "test:responsive": "playwright test tests/responsive",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:coverage": "playwright test --reporter=html,json --coverage"
  },
  "keywords": [
    "catbutler",
    "ai",
    "assistant",
    "home",
    "api"
  ],
  "author": "Izadora",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "autoprefixer": "^10.4.14",
    "axios": "^1.12.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.8.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "prop-types": "^15.8.1",
    "start-server-and-test": "^2.1.0",
    "terser": "^5.44.0",
    "vite": "^7.1.5",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
