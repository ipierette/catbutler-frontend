{
  "name": "catbutler-frontend",
  "version": "3.5.0",
  "description": "Frontend React para CatButler - Assistente de IA para Casa",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run test:unit && npm run lint",
    "build": "vite build",
    "lint": "eslint . --ext .js,.jsx --fix",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "preview": "vite preview --port=5173",
    "start": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "predeploy": "npm run build",
    "pretest": "npm run build",
    "test": "start-server-and-test preview http://localhost:5173 'playwright test --config playwright.config.js'",
    "test:mobile": "playwright test --grep=\"Mobile\"",
    "test:desktop": "playwright test --grep=\"Desktop\"",
    "test:responsive": "playwright test tests/responsive",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:coverage": "playwright test --reporter=html,json --coverage"
  },
  "keywords": [
    "catbutler",
    "ai",
    "assistant",
    "home",
    "api"
  ],
  "author": "Izadora",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "axios": "^1.12.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.21",
    "start-server-and-test": "^2.1.0",
    "tailwindcss": "^3.2.7",
    "terser": "^5.44.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
